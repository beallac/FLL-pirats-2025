{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run on my robot",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pybricksdev",
                "run",
                "ble",
                "--name",
                "${env:robotName}",
                "${file}"
            ],
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^.*File.*\\\"(.*\\.py).*(\\b\\d{1,}\\b)(.*)in.*$",
                        "file": 1,
                        "line": 2
                    },
                    {
                        "regexp": "(^.*\\:.*)",
                        "message": 1
                    }
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
